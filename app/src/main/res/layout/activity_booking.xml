<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/md_blue_50">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/horsens"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pricepernight"
                android:layout_marginBottom="10dp"
                android:textColor="@color/md_green_800"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/hostpic"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/messageuser4" />

            <TextView
                android:id="@+id/hostname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/host_res3"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:id="@+id/frame"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:layout_marginEnd="10dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <ImageButton
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/white"
            android:src="@drawable/left"
            android:layout_gravity="center_vertical|start"/>
        <ImageButton
            android:id="@+id/right"
            android:src="@drawable/right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/white"
            android:layout_gravity="center_vertical|end"/>
    </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/md_grey_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/datelayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/arrivalbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrivaldate"
            android:textSize="11sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/md_blue_900"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/deplayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/departurebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/departuredate"
            android:textSize="11sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/md_blue_900"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/timelayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/timebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrivaltime"
            android:textSize="11sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/md_blue_900"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/timebtn" />

    </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/inputs"
        android:hint="@string/hostgreeting"
        android:textAlignment="textStart"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:lines="6"
        android:maxLines="6"
        android:gravity="top|start"
        android:paddingTop="5dp"
        android:paddingStart="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/md_grey_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orderdetails"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pricediscount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/servicefee"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_grey_500"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sum"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/totalprice1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/totaldiscount"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/servicefeetotal"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_grey_500"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sumnumber"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/md_grey_500"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paymentmethod"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mobilepay"
                android:layout_marginEnd="30dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/paypal"
                android:layout_marginEnd="30dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/visa"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mastercard"
                android:layout_marginEnd="30dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/applepay"
                android:layout_marginEnd="30dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/googlepay"/>


        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/book"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/md_red_900"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>
</ScrollView>